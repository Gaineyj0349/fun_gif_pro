<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="@dimen/frag_padd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:paddingBottom="@dimen/fab_margin">

                <LinearLayout
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/frag_color_bgcolor_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_margin="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:paddingBottom="@dimen/fab_margin">
                        <LinearLayout
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/frag_color_bgcolor_card_LL_to_change"
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:background="@color/white"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:background="@color/colorPrimaryDark"
                                    android:fontFamily="sans-serif-smallcaps"
                                    android:textSize="20dp"
                                    android:textColor="@color/white"
                                    android:text="@string/BGcolor"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:fontFamily="serif"
                                        android:textColor="@color/colorPrimary"
                                        android:textAlignment="center"
                                        android:id="@+id/frag_colors_tv1"
                                        android:textSize="20dp"
                                        android:paddingBottom="8dp"
                                        android:text="color code"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/white"/>
                            <LinearLayout
                                android:background="@color/colorPrimary"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <android.support.design.widget.FloatingActionButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:fabSize="mini"
                                    app:srcCompat="@drawable/ic_touch_app_black_24dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:paddingBottom="@dimen/fab_margin">

                <LinearLayout
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/frag_color_textcolor_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_margin="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:paddingBottom="@dimen/fab_margin">
                        <LinearLayout
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/frag_color_textcolor_card_LL_to_change"
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:background="@color/white"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:background="@color/colorPrimaryDark"
                                    android:fontFamily="sans-serif-smallcaps"
                                    android:textSize="20dp"
                                    android:textColor="@color/white"
                                    android:text="@string/textcolor"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:fontFamily="serif"
                                        android:textColor="@color/colorPrimary"
                                        android:textAlignment="center"
                                        android:id="@+id/frag_colors_tv2"
                                        android:textSize="20dp"
                                        android:paddingBottom="8dp"
                                        android:text="color code"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/white"/>
                            <LinearLayout
                                android:background="@color/colorPrimary"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <android.support.design.widget.FloatingActionButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:fabSize="mini"
                                    app:srcCompat="@drawable/ic_touch_app_black_24dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </android.support.v7.widget.CardView>





        </LinearLayout>


    </ScrollView>



</LinearLayout>
